.add-tag{
    padding:25rpx 0;
}
.add-tag-icon{
    width:12px;
    height:12px;
}
.add-tag-title{
    font-size:12px;
    color:#030303;
    margin:0 0rpx 0rpx 8rpx;
}
.add-tag-tips{
    font-size:12px;
    color:#777777;
}
.tag-item{
    height:18.5px;
    line-height:18.5px;
    font-size:12px;
    color:#777777;
    background-color:#f4f4f4;
    padding:7rpx 15rpx 8rpx 12rpx;
    margin:36rpx 26rpx 0rpx 0;
    float:left;
    border-radius:20rpx;
}
.tag-item image{
    width:7.5px;
    height:7.5px;
    margin-left:9rpx;
    
}
.image-container{
    border-top:solid 2rpx #eeeeee;
    clear:both;
    padding:76rpx 0 0 39rpx;
}

.image-container image{
    width:483rpx;
    height:483rpx;
}