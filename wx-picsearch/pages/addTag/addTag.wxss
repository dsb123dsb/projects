.input-container{
    display:flex;
    flex-direction: row;
    padding:34rpx 22rpx 0 30rpx;
    overflow:hidden;
}
.input-container input{
    width:544rpx;
    height:36px;
    line-height:36px;
    font-size:13px;
    padding-left:20rpx;
    border-radius: 5rpx;
    background: #f4f4f4;
}
.placeholder{
    margin-left: 25rpx;
    font-size: 12px;
    color: '#d4d4d4';
}
.add-btn{
    width:92rpx;
    height:30px;
    margin:7rpx 0 0 32rpx;
    line-height:30px;
    border-radius:10rpx;
    border:0;
    text-align:center;
    font-size:13px;
    padding:0;
}
.selected-tags-group{
    padding:38rpx 9rpx 0rpx 39rpx;
    height:51px;
}
.selected-tag{
    border:solid 2rpx #ea4f16;
    font-size:12px;
    font-family:"微软雅黑";
    /*padding:5rpx 14rpx;*/
    padding:0 36rpx 0 18rpx;
    margin-right:30rpx;
    margin-bottom:28rpx;
    color:#ea4f16;
    border-radius:24rpx;
    float:left;
    height:22px;
    line-height:22px;
    position:relative;
}
.selected-tag image{
    width:16rpx;
    height:16rpx;
    margin-left:12rpx;
    position:absolute;
    top:50%;
    right:14rpx;
    transform:translateY(-50%);
}

.hot-tags{
    margin: 0 42rpx ;
    clear:both;
    border-top:1rpx solid #f4f4f4;
    padding:29rpx 0 29rpx 0rpx;
}

.hot-tags-title{
    font-size:12px;
    color:#888;
}
.hot-tags-group{
    margin:48rpx 0 0 24rpx;
}
.tag-item{
    font-size:11px;
    color:#888;
    border-radius:30rpx;
    background-color:#f4f4f4;
    line-height:21.5px;
    height:21.5px;
    margin-right:22rpx;
    margin-bottom:18rpx;
    padding-left:30rpx;
    padding-right:30rpx;
    float:left;
}

.tips{
    position:fixed;
    background-color:#ea4f16;
    width:100%;
    color:white;
    font-size:12px;
    text-align:center;
    height:24px;
    line-height:24px;
    z-index:9;
}
.complete{
    position: fixed;
    bottom: 202rpx;
    left: 271rpx;
    width: 208rpx;
    height: 78rpx;
    background: #ea4f16;
    color: #fff;
    font-size: 20px;
    text-align: center;
    line-height: 78rpx;
    border-radius: 15rpx;
}