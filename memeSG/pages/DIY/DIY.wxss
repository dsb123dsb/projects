/* pages/DIY/DIY.wxss */
/* diy顶部区域 */
.page{
    background-color: rgb(244,244,244);
}
.conatainer{
    width: 100%;
    height: 608rpx;
    background-color: white;
}
.diy_container{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 560rpx;
    width: 678rpx;
    background-color: rgb(244,244,244);
    margin: 6rpx 16rpx 0 16rpx;
    padding: 25rpx 20rpx;
    border-radius: 10rpx;
}
.diy_container .content{
    position: relative;
    height: 550rpx;
    width: 550rpx;
    background-color: white;
    box-shadow: 2rpx 2rpx 2rpx rgb(238, 233, 233);
}
.diy_container .image{
    height: 100%;
    width: 100%;
}
.diy_container .text{
    position: absolute;
    bottom: 30rpx;
    left: 0;
    width: 100%;
    text-align: center;
    font-size: 64rpx;
}
.tools{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    height: 100%;
    margin-left: 14rpx;
}
.tools image{
    width: 40rpx;
    height: 40rpx;
}
.tools .favorite{
    margin-bottom: 80rpx;
}
.tools .upload{
    width: 42rpx;
    height: 34rpx;
    margin-bottom: 80rpx;
}
.tools .down_load{
    margin-bottom: 106rpx;
}
.tools .refresh_text{
    width: 114rpx;
    height: 72rpx;
}
/* 下部推荐文字 */
.recomend{
    position: relative;
    padding: 20rpx 20rpx 0;
    background-color: rgb(244,244,244);
    color: #333333;
  }
/* 标题 */
.title{
    position: relative;
    height: 28rpx;
    font-size: 32rpx;
}
.title .text, .icon_recomend{
    display: inline-block;
    vertical-align: middle;
}
.title .text{
    margin-left: 2rpx;
}
.icon_recomend{
    width: 28rpx;
    height: 28rpx;
}
.recomend_items{
    display: flex;
    flex-direction: column;
    padding: 21rpx 21rpx;
}
.recomend_items .text{
    height: 28rpx;
    padding: 28rpx 0;
    text-align: center;
    line-height: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    border-bottom: 1rpx solid rgb(238, 233, 233);
}
