.add-tag {
  position: relative;
  height: 80rpx;
}

.add-tag-icon {
  position: absolute;
  left: 0;
  top: 28rpx;
  width: 12px;
  height: 12px;
}

.add-tag-arrow {
  float: right;
  width: 8px;
  height: 16px;
  margin-top: 24rpx;
}

.add-tag-title {
  font-size: 12px;
  line-height: 80rpx;
  color: #222;
  margin: 0 0rpx 0rpx 54rpx;
}

.add-tag-tips {
  font-size: 12px;
  color: #777;
}

.tag-item {
  line-height: 18.5px;
  font-size: 12px;
  color: #888;
  background-color: #f4f4f4;
  padding: 7rpx 10rpx 8rpx 7rpx;
  border-radius: 20rpx;
}
.tag-item1 {
  float: right;
  margin: 15rpx 8rpx 0 0rpx;
  background-color: white;
}
.tag-item image {
  width: 9px;
  height: 9px;
  margin-left: 7rpx;
}

.image-container {
  border-top: solid 2rpx #eee;
  clear: both;
  /*padding: 50rpx 0 0 39rpx;*/
  padding: 50rpx 0 100rpx 39rpx;
}

.image-container image {
  width: 483rpx;
  height: 483rpx;
  margin-left: 100rpx;
}

