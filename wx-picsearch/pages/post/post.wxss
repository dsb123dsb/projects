.button {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
}

.title-input {
  height: 80rpx;
  border-bottom: solid 2rpx #eee;
  position: relative;
  color: #030303;
}

.title-input input {
  font-size: 12px;
  position: absolute;
  left: 30rpx;
  border: 0;
  height: 46px;
  width: 600rpx;
  line-height: 46px;
}

.placeholder {
  color: #d4d4d4;
  font-size: 12px;
}

.desc-input {
  height: 254rpx;
  padding: 30rpx 0;
  position: relative;
  color: #030303;
  font-size: 12px;
  border-bottom: solid 2rpx #eee;
}

.desc-input textarea {
  position: absolute;
  left: 30rpx;
  top: 34rpx;
  padding: 0;
  margin: 0;
  height: 250rpx;
}

.tags-column {
  position: relative;
  padding: 0 30rpx;
}

.border {
  border-top: 1rpx solid #eee;
  height: 0;
  width: 100%;
}

