.preview-image{
    width:750rpx;
}
.preview-image-container{
    width:750rpx;  
}
.picture-info{
    padding:57rpx 42rpx 0 42rpx;
    color:#030303;
    font-family:'Lucida Sans Regular',sans-serif;
}

.picture-title{
    font-size:16px;
    font-weight: bold;
    
}
.picture-desc{
    font-size:12px;
    margin-top:31rpx;
    line-height:20px;
}

.tags-group{
    margin:25rpx 42rpx 30rpx 42rpx;
    overflow:hidden;
}
.tags-item{
    background-color:#f4f4f4;
    border-radius:30rpx;
    width:auto;
    padding:0 28rpx;
    height:22px;
    margin:0 29rpx 18rpx 0;
    float:left;
    font-size:12px;
    line-height:22px;
    color:#777777;
    text-align:center;
}

.user-operation{
    height:45px;
    width:100%;
    /*border-top:solid 2rpx #f4f4f4;*/
    background-color:rgba(255,255,255,0.8);
    position:fixed;
    z-index:55;
}

.user-operation-content{
    width:706rpx;
    height:45px;
    margin:auto;
    display:flex;
    flex-direction: row;
}
.user-content{
    width:350rpx;
    height:45px;
    display:flex;
    flex-direction: row;
    align-items: center;
}
.user-avatar{
    margin-top:5px;
    width:22.5px;
    height:22.5px;
    background:no-repeat;
    background-size:cover;
    border-radius: 50%;
    overflow:hidden;
    
}
.user-avatar image{
    width:22.5px;
    height:22.5px;
}
.user-name{
    margin-top:5px;
    font-size:12px;
    line-height:22.5px;
    color:#030303;
    padding-left:14rpx;
    
}
.operation-groups{
    float:right;
    /*padding-top:5px;*/
    height:45px;
    display:flex;
    flex-direction: row;
    align-items: center;
    width:356rpx;
    justify-content: flex-end;
}
.operation-groups image{
    width:17.5px;
    height:17.5px;
    margin-left:20rpx;
    padding:20rpx;
}

.test{
    background-color:rgba(0,0,0,0.5);
    position:fixed;
    left:100rpx;
    top:200rpx;
    height:100rpx;
    width:100rpx;
}

.edit-image{
    position:fixed;
    width:77rpx;
    height:77rpx;
    right: 40rpx;
    top:41rpx;
    z-index:10;
}
.edit-image image{
    width:77rpx;
    height:77rpx;
}

.longtap-tip{
    position:fixed;
    background-color:#030303;
    top:0;
    left:0;
    bottom:0;
    right:0;
    z-index:999;
}

.opacity-cover{
    background-color:rgba(3,3,3,0.8);
    position:absolute;
}
.longtap-tip image{
    position:absolute;
}
.longtap-arrow{
    top:603rpx;
    left:160rpx;
    width:59rpx;
    height:81rpx;
}
.longtap-image{
    top:522rpx;
    right:153rpx;
    width:64rpx;
    height:105rpx;
}
.longtap-text{
    position:absolute;
    top:644rpx;
    left:238rpx;
    color:white;
    font-size:18px;
}
.iknow-btn{
    width:223rpx;
    height:34px;
    line-height:34px;
    position:absolute;
    border:4rpx solid #fff;
    color:white;
    font-size:18px;
    top:730rpx;
    left:264rpx;
    border-radius:5px;
    text-align:center;
    margin:auto;
}

.android-download-tip{
    width:100%;
    text-align:center;
    font-size:18px;
    top:184rpx;
    color:white;
    position:absolute;
}
.iknow-container{
    width:100%;
    text-align:center;
    position:absolute;
    top:270rpx;
}
.android-ikonw-btn{
    padding:14rpx 44rpx;
    border:solid 4rpx white;
    border-radius: 10rpx;
    display:inline-block;
    color:white;
    font-size:18px;
}
.android-arrow{
    width:82rpx;
    height:132rpx;
    top:16rpx;
    left:557rpx;
    position:absolute;
}